<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/rl_wel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:background="@drawable/waves"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"

            android:orientation="vertical">
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome\nBack"
                android:textColor="@color/white"
                android:textSize="@dimen/_35sdp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrancei"
                    android:drawableEnd="@drawable/yellow_circle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_35sdp"

                    />
                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@drawable/yellow_circle"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/rl_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sdp"
                android:layout_centerVertical="true"

                />

            <TextView
                android:id="@+id/signup_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:onClick="onClick"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/signup_bg"

                />

        </RelativeLayout>



        <LinearLayout
            android:id="@+id/rl_1"
            android:layout_below="@+id/rl_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/_16sdp"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/dark_grey"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:hint="Email" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/password_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textSize="@dimen/_16sdp"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/dark_grey"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:hint="Password" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/mobile_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textSize="@dimen/_16sdp"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/dark_grey"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:hint="Mobile" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_otp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/otp_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="@dimen/_16sdp"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/dark_grey"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:hint="OTP" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OTP"
                    android:gravity="center"
                    android:onClick="onClick"

                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/blue_corner_border"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EMAIL"
                    android:gravity="center"
                    android:onClick="onClick"

                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/blue_corner_border"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_centerVertical="true"

                    />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:onClick="onClick"
                android:visibility="gone"
                android:text="Forgot Password ?"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorPrimaryDark"


                />

            <LinearLayout
                android:id="@+id/submit_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/submit_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:text="SUBMIT"
                    android:onClick="onClick"
                    android:textStyle="bold"

                    android:textSize="@dimen/_16sdp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:background="@drawable/gradient_bg"
                    android:layout_marginStart="5dp" />


            </LinearLayout>





        </LinearLayout>



    </RelativeLayout>




</LinearLayout>